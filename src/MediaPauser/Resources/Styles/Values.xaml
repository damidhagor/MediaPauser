<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="AccentColor">#512BD4</Color>
    <Color x:Key="AccentColorDark">#512BD4</Color>

    <Color x:Key="PageBackgroundColorLight">White</Color>
    <Color x:Key="PageBackgroundColorDark">Black</Color>

    <Color x:Key="TextColorLight">Black</Color>
    <Color x:Key="TextColorDark">White</Color>

    <Color x:Key="ButtonTextColorLight">White</Color>
    <Color x:Key="ButtonTextColorDark">Black</Color>
    <Color x:Key="ButtonBackgroundColorLight"></Color>
    <Color x:Key="ButtonBackgroundColorDark">White</Color>

    <x:String x:Key="DefaultFont">OpenSansRegular</x:String>

    <x:Double x:Key="NormalFontSize">14</x:Double>

    <x:Double x:Key="MainButtonGlyphFontSize">24</x:Double>
    <x:Double x:Key="MainButtonFontSize">24</x:Double>

    <x:Double x:Key="StepperButtonGlyphFontSize">90</x:Double>
    <x:Double x:Key="StepperPrimaryLabelFontSize">90</x:Double>
    <x:Double x:Key="StepperSecondaryLabelFontSize">20</x:Double>

    <x:Single x:Key="TimerProgressBarStroke">10</x:Single>
    
</ResourceDictionary>