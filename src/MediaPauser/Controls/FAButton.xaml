<?xml version="1.0" encoding="utf-8" ?>
<Button xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="MediaPauser.Controls.FAButton" x:ClassModifier="internal"
       x:Name="Button">

    <Button.ImageSource>
        <FontImageSource Glyph="{Binding Glyph, Source={x:Reference Button}}"
                         Color="{Binding GlyphColor, Source={x:Reference Button}}"
                         FontFamily="{Binding GlyphFontFamily, Source={x:Reference Button}}"
                         Size="{Binding GlyphFontSize, Source={x:Reference Button}}" />
    </Button.ImageSource>
</Button>
